{
  "name": "amrs-preventative-maintenance",
  "version": "1.0.0",
  "description": "AMRS Maintenance Tracker",
  "main": "electron_app/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "node electron_app/install-python-deps.js",
    "prepare-python": "node electron_app/prepare-python.js",
    "prebuild": "npm run prepare-python",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.amrs.maintenancetracker",
    "productName": "AMRS Maintenance Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron_app/**/*",
      "!electron_app/templates/**/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "electron_app/templates",
        "to": "templates",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "drizzydom",
        "repo": "AMRS-Preventative-Maintenance"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "extract-zip": "^2.0.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "canvas": "^3.1.0",
    "cors": "^2.8.5",
    "electron-log": "^5.3.3",
    "electron-updater": "^6.6.2",
    "express": "^4.21.2",
    "icon-gen": "^5.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  }
}
