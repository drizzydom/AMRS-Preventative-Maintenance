{
  "name": "amrs-preventative-maintenance",
  "version": "1.0.0",
  "description": "AMRS Maintenance Tracker",
  "main": "electron_app/main.js",
  "scripts": {
    "start": "node electron_app/create-templates.js && electron electron_app/main.js",
    "bundle-templates": "node electron_app/bundle-templates.js",
    "build": "node electron_app/create-templates.js && node electron_app/build.js",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.amrs.maintenancetracker",
    "productName": "AMRS Maintenance Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron_app/**/*",
      "!electron_app/templates/**/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "electron_app/templates",
        "to": "templates",
        "filter": ["**/*"]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "drizzydom",
        "repo": "AMRS-Preventative-Maintenance"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "canvas": "^3.1.0",
    "electron-log": "^5.3.3",
    "electron-updater": "^6.6.2",
    "icon-gen": "^5.0.0"
  }
}